<policy-rules>
  <grant-permission>
    <name>anonymous</name>
  </grant-permission>
  <auth-permission>
    <name>logged-user</name>
  </auth-permission>
  <url-policy id='1'>
    <permission>logged-user</permission>
    <url-pattern>/admin/.*</url-pattern>
  </url-policy>
  <url-policy id='3'>
    <permission>logged-user</permission>
    <url-pattern>/user/.*</url-pattern>
  </url-policy>
  <url-policy id='2'>
    <permission>anonymous</permission>
    <url-pattern>/.*</url-pattern>
  </url-policy>
</policy-rules>
